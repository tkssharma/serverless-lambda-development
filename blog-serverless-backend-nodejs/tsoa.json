{
  "swagger": {
    "name": "Express serverless swagger API",
    "description": "Express serverless API definitions",
    "version": "1.0.0",
    "schemes": [ "http" ],
    "outputDirectory": "./src/generated",
    "entryFile": "./src/app.ts",
    "host": "localhost:3000",
    "controllerPathGlobs": [
      "./src/**/*Controller.ts"
    ],
    "basePath": "/api"
  },
  "routes": {
    "basePath": "/api",
    "entryFile": "./src/app.ts",
    "routesDir": "./src/generated",
    "middleware": "express"
  }
}
